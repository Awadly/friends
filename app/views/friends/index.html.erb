<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table class="table table-dark table-bordered table-striped table-hover">
  <thead class="table-dark">
    <th>First name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    <th>User Id</th>
    <th></th>
    <th></th>
    </th>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <td><%= link_to friend.first_name+' '+ friend.last_name, friend %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>  
      <td><%= button_to "Delete", friend, method: :delete, data: { confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-danger" %></td>
      <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to  "New friend", new_friend_path, class:"btn btn-secondary" %>
